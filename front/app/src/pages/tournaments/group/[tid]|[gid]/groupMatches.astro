---
import Match from "~/components/match.astro";

const { tid, gid } = Astro.params;

const matches = await fetch(
  `https://torneos-manager.vercel.app/api/groups/matches/${tid}/${gid}`,
  {
    method: "POST",
  }
).then((response) => response.json());
---

<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="application-name" content="Â " />
    <meta name="msapplication-TileColor" content="#FFFFFF" />

    <!-- CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
    />
    <link rel="stylesheet" href="/assets/css/main.min.css" />
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="/assets/css/dev-styles.css" />

    <title>iPadel</title>
    <style is:inline>
      .row {
        margin-left: 0px;
        margin-right: 0px;
      }
    </style>
  </head>

  <body data-aos-easing="ease" data-aos-duration="1500" data-aos-delay="100">
    <!-- Tournaments -->
    <section class="d-tournaments-calendar">
      <div class="container b-calendar-list">
        <div class="row">
          <div class="col-12">
            <h2 class="title-2 aos-init aos-animate" data-aos="fade-up">
              Partidos del Grupo A
            </h2>
            {
              matches.matches.map((item: any) => {
                <Match item={item} />;
              })
            }
          </div>
        </div>
      </div>
    </section>
    <!-- End Tournaments -->
